{
	"name": "acme-marketplace",
	"private": true,
	"packageManager": "^pnpm@8.12.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.12.0"
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "FORCE_COLOR=1 turbo run dev",
		"test": "FORCE_COLOR=1 turbo run test",
		"test.related": "FORCE_COLOR=1 turbo run test.related",
		"lint": "FORCE_COLOR=1 turbo run lint",
		"sb": "FORCE_COLOR=1 turbo run sb",
		"sb.build": "turbo run sb.build",
		"format": "prettier --write **/*.{*js,ts*,json,css} && turbo run format",
		"format.check": "prettier --check **/*.{*js,ts*,json,css}",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "18.4.3",
		"@commitlint/config-conventional": "18.4.3",
		"eslint": "8.56.0",
		"eslint-define-config": "2.0.0",
		"husky": "8.0.3",
		"npm-check-updates": "16.14.12",
		"prettier": "3.1.1",
		"turbo": "1.11.2",
		"typescript": "5.3.3",
		"vitest": "1.1.0"
	}
}
